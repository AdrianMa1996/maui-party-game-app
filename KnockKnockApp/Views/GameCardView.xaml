<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KnockKnockApp.Views.GameCardView"
             xmlns:viewmodels="clr-namespace:KnockKnockApp.ViewModels"
             x:DataType="viewmodels:GameplayViewModel">
    
    <Grid BackgroundColor="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label 
        BackgroundColor="Green"
        Grid.Row="0"
        Text="Welcome to the GameCardView"
        VerticalOptions="Center" />

        <Button 
        BackgroundColor="Red"
        Grid.Row="1"
        Text="Close"
        VerticalOptions="Center"
        Command="{Binding ChangeCurrentView2Command}"/>
    </Grid>
    
</ContentView>
