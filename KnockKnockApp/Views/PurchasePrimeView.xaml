<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KnockKnockApp.Views.PurchasePrimeView"
             Title="PurchasePrimeView"
             Shell.NavBarIsVisible="False"
             xmlns:viewmodels="clr-namespace:KnockKnockApp.ViewModels"
             xmlns:converters="clr-namespace:KnockKnockApp.Converters">
    <ContentPage.Resources>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
    </ContentPage.Resources>

    <Grid BackgroundColor="{StaticResource Violet}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Frame Grid.Row="0" Grid.Column="1" WidthRequest="80" HeightRequest="80" CornerRadius="0" Margin="0,0,0,0" Padding="0" IsClippedToBounds="True" HorizontalOptions="End" VerticalOptions="Start" BackgroundColor="Transparent">
            <Image Source="icon_close_gold.png" WidthRequest="20" HeightRequest="20" Aspect="AspectFill"/>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToSelectGameModeCommand}"/>
            </Frame.GestureRecognizers>
        </Frame>

        <!--<Frame Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"  WidthRequest="100" HeightRequest="100" Margin="0,40,0,0" Padding="0" CornerRadius="30" IsClippedToBounds="True" BackgroundColor="{StaticResource Violet}" HorizontalOptions="Center">
            <Image Source="icon_crown_gold.png" Aspect="AspectFit" Margin="8"/>
        </Frame>-->

        <Image Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Source="icon_crown_gold.png" MaximumHeightRequest="140" Aspect="AspectFit"/>

        <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Text="Lass uns die Party starten!" VerticalOptions="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="30" FontFamily="BowlbyOneSC" TextColor="{StaticResource Gold}" LineHeight="0.8" Margin="0,20,0,0"/>

        <VerticalStackLayout Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" VerticalOptions="CenterAndExpand" Margin="0,10,0,25">
            <VerticalStackLayout HorizontalOptions="Center">
                <HorizontalStackLayout HorizontalOptions="Start" Margin="0,10,0,10">
                    <Image Source="icon_star_two_gold.png" HeightRequest="25" WidthRequest="25" Margin="0,0,10,0"/>
                    <Label Text="Nutze alle Spielmodi" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource Gold}"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout HorizontalOptions="Start" Margin="0,10,0,10">
                    <Image Source="icon_star_two_gold.png" HeightRequest="25" WidthRequest="25" Margin="0,0,10,0"/>
                    <Label Text="Regelmäßige Updates" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource Gold}"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout HorizontalOptions="Start" Margin="0,10,0,10">
                    <Image Source="icon_star_two_gold.png" HeightRequest="25" WidthRequest="25" Margin="0,0,10,0"/>
                    <Label Text="Jederzeit kündbar" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource Gold}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="30,0,30,0" HeightRequest="180">
            <Label Text="Nur 4,99€ pro Woche" FontSize="20" HorizontalOptions="Center" Margin="0,0,0,15" TextColor="{StaticResource Gold}"/>
            <ActivityIndicator IsVisible="{Binding IsLoading}" IsRunning="True" Color="{StaticResource Gold}" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,20,0,0"/>
            <Button IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}" Command="{Binding BuyPrimeSubscriptionCommand}" Text="STARTEN" FontFamily="BowlbyOneSC" FontSize="30" TextColor="{StaticResource Violet}" Padding="0,16" CornerRadius="15" BackgroundColor="{StaticResource Gold}"/>
        </VerticalStackLayout>

        <StackLayout Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="{StaticResource VioletDark}" Padding="0,25,0,35">
            <Button Text="Nutzungsbedingungen" TextColor="{StaticResource Gray300}" BackgroundColor="Transparent" HorizontalOptions="Center" FontSize="18" Margin="0,10,0,0" Padding="0" MinimumHeightRequest="0" Command="{Binding OpenTermsOfUseCommand}"/>
            <Button Text="Datenschutzbestimmungen" TextColor="{StaticResource Gray300}" BackgroundColor="Transparent" HorizontalOptions="Center" FontSize="18" Margin="0,10,0,0" Padding="0" MinimumHeightRequest="0" Command="{Binding OpenPrivacyPolicyCommand}"/>
        </StackLayout>
    </Grid>
</ContentPage>