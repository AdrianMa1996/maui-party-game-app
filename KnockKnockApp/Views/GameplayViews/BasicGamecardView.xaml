<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KnockKnockApp.Views.GameplayViews.BasicGamecardView"
             x:Name="this">
    <Grid BindingContext="{x:Reference this}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <FlexLayout Grid.Row="0" BackgroundColor="{Binding GamecardBackgroundColor, FallbackValue='White'}" JustifyContent="SpaceBetween" Direction="Column">
            <FlexLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GamecardTapGestureRecognizerCommand}"/>
            </FlexLayout.GestureRecognizers>
            <Button BackgroundColor="Red" Text="Close" HorizontalOptions="End" Command="{Binding LeaveGameModeCommand}"/>
            <VerticalStackLayout HorizontalOptions="Center">
                <Label Text="{Binding GamecardTitle, FallbackValue='Gamecard Title'}" HorizontalOptions="Center" />
                <Label Text="{Binding GamecardText, FallbackValue='Gamecard Text'}" HorizontalOptions="Center" />
            </VerticalStackLayout>
            <Button BackgroundColor="Red" Text="Spieler Ã¤ndern" HorizontalOptions="End"/>
        </FlexLayout>
    </Grid>
</ContentView>
