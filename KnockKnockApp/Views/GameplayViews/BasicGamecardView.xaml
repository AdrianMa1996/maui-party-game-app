<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KnockKnockApp.Views.GameplayViews.BasicGamecardView"
             x:Name="this"
             xmlns:converters="clr-namespace:KnockKnockApp.Converters">
    <ContentView.Resources>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
        <converters:CardSetCategoryToColorConverter x:Key="CardSetCategoryToColorConverter"/>
        <converters:CardSetCategoryToShowPointsBoolConverter x:Key="CardSetCategoryToShowPointsBoolConverter"/>
    </ContentView.Resources>
    <Grid BindingContext="{x:Reference this}" BackgroundColor="{Binding CurrentCard.CardSetDetails.Category, Converter={StaticResource CardSetCategoryToColorConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="1" Opacity="{Binding CurrentCard.CardSetDetails.Category, Converter={StaticResource CardSetCategoryToShowPointsBoolConverter}}">
            <Grid Opacity="{Binding CurrentGameMode.IsTeamGameMode}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" BackgroundColor="{StaticResource TeamOneColor}" Text="{Binding TeamOne.Name}" TextColor="White" FontAttributes="Bold" HorizontalOptions="End" VerticalOptions="Center" Padding="30, 7"/>
                <HorizontalStackLayout Grid.Column="1" BackgroundColor="{StaticResource Gray950}" HorizontalOptions="Center" VerticalOptions="Center" Padding="10">
                    <Label Grid.Column="0" Text="{Binding TeamOne.GamePoints, StringFormat=Now {0:c}!}" TextColor="White" FontAttributes="Bold" WidthRequest="30" HorizontalTextAlignment="End"/>
                    <Label Grid.Column="0" Text=" : " TextColor="White" FontAttributes="Bold"/>
                    <Label Grid.Column="0" Text="{Binding TeamTwo.GamePoints, StringFormat=Now {0:c}!}" TextColor="White" FontAttributes="Bold" WidthRequest="30" HorizontalTextAlignment="Start"/>
                </HorizontalStackLayout>
                <Label Grid.Column="2" BackgroundColor="{StaticResource TeamTwoColor}" Text="{Binding TeamTwo.Name}" TextColor="White" FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Center" Padding="30, 7"/>
            </Grid>
        </Grid>

        <StackLayout Grid.Row="0" Grid.Column="1" Opacity="{Binding CurrentGameMode.IsTeamGameMode}" HeightRequest="50" WidthRequest="50" HorizontalOptions="End" VerticalOptions="Start">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToManagePlayersCommand}"/>
            </StackLayout.GestureRecognizers>
        </StackLayout>

        <Frame Grid.Row="0" Grid.Column="1" Opacity="{Binding CurrentGameMode.IsTeamGameMode, Converter={StaticResource InvertedBoolConverter}}" WidthRequest="30" HeightRequest="30" Margin="0,0,10,0" Padding="0" CornerRadius="10" IsClippedToBounds="True" BackgroundColor="{StaticResource Gray100}" HorizontalOptions="End" VerticalOptions="Center">
            <Image Source="icon_player_gray.png" Aspect="AspectFill" HeightRequest="15" WidthRequest="15"/>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToManagePlayersCommand}"/>
            </Frame.GestureRecognizers>
        </Frame>

        <StackLayout Grid.Row="0" Grid.Column="2" HeightRequest="50" WidthRequest="50" HorizontalOptions="End" VerticalOptions="Start">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToSelectGameModeCommand, Converter={StaticResource InvertedBoolConverter}}"/>
            </StackLayout.GestureRecognizers>
        </StackLayout>

        <Frame Grid.Row="0" Grid.Column="2" WidthRequest="30" HeightRequest="30" Padding="0" CornerRadius="10" IsClippedToBounds="True" BackgroundColor="{StaticResource Gray100}" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="icon_close_gray.png" Aspect="AspectFill" HeightRequest="15" WidthRequest="15"/>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToSelectGameModeCommand}"/>
            </Frame.GestureRecognizers>
        </Frame>

        <StackLayout x:Name="CardTextStackLayout" Grid.Row="1" Grid.Column="1">
            <Label Text="{Binding CurrentCard.CardSetDetails.Title}" HorizontalTextAlignment="Center" FontFamily="BowlbyOneSC" TextColor="White" FontSize="32" HeightRequest="55"/>
            <Label Text="{Binding CurrentCard.GameCardDetails.CardText}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
        </StackLayout>

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Grid.ColumnSpan="3" BackgroundColor="{StaticResource Blue}" Text="Weiter" Command="{Binding DisplayNextCardCommand}" FontAttributes="Bold" TextColor="White" CornerRadius="0"/>
        </Grid>
    </Grid>
</ContentView>
