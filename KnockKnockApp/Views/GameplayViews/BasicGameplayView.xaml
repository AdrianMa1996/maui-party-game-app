<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KnockKnockApp.Views.GameplayViews.BasicGameplayView"
             Title="BasicGameplayView"
             xmlns:viewmodels="clr-namespace:KnockKnockApp.ViewModels.GameplayViewModels">
    
    <Grid BackgroundColor="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label 
        BackgroundColor="Green"
        Grid.Row="0"
        Text="{Binding CurrentCard.GameCardDetails.CardText}"
        VerticalOptions="Center" />

        <Button 
        BackgroundColor="Blue"
        Grid.Row="0"
        Text="Next Card"
        VerticalOptions="End"
        Command="{Binding DisplayNextCardAsyncCommand}"/>

        <Button 
        BackgroundColor="Red"
        Grid.Row="1"
        Text="Close"
        VerticalOptions="Center"
        Command="{Binding NavigateToSelectGameModeCommand}"/>
    </Grid>
    
</ContentPage>