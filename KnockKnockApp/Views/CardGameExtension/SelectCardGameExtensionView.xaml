<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KnockKnockApp.Views.CardGameExtension.SelectCardGameExtensionView"
             Title="SelectCardGameExtensionView"
             Shell.NavBarIsVisible="False"
             xmlns:viewmodels="clr-namespace:KnockKnockApp.ViewModels"
             NavigatedTo="ContentPage_NavigatedTo">
    
    <ContentPage.Resources>
        <CollectionView x:Key="ExtensionCollectionView" x:Name="ExtensionCollectionView" ItemsSource="{Binding ExtensionCollection}" ItemsLayout="VerticalGrid, 2" Margin="15">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <ContentView>
                        <Frame CornerRadius="10" Padding="0,20,0,20" IsClippedToBounds="True" BackgroundColor="{StaticResource Gold}" Margin="5">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.NavigateToExtensionGameplayCommand, Source={x:Reference ExtensionCollectionView}}" CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <StackLayout>
                                <Image Grid.Row="0" Source="{Binding Image}" WidthRequest="100" HeightRequest="100"/>
                                <Label Grid.Row="1" FontFamily="BowlbyOneSC" TextColor="{StaticResource Violet}" Text="{Binding Title}" HorizontalTextAlignment="Center"/>
                            </StackLayout>
                            
                        </Frame>
                    </ContentView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </ContentPage.Resources>

    <Grid BackgroundColor="{StaticResource Violet}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10,10,10,0">
            <Frame Padding="0" CornerRadius="10" IsClippedToBounds="True" BackgroundColor="Transparent" VerticalOptions="Center" HorizontalOptions="Start">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToWelcomePageViewCommand}"/>
                </Frame.GestureRecognizers>
                <HorizontalStackLayout Margin="15">
                    <Image Source="icon_arrow_right_gold.png" Aspect="AspectFill" HeightRequest="25" WidthRequest="25" Rotation="180"/>
                </HorizontalStackLayout>
            </Frame>
            <Label Text="Kartenspiel" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontFamily="BowlbyOneSC" TextColor="{StaticResource Gold}" FontSize="26" LineHeight="0.8"/>
        </Grid>

        <VerticalStackLayout Grid.Row="1" Margin="15,0,15,10">
            <Label Text="So funktioniert's: Holt euch euer KnockKnock-Kartenspiel und folgt der beiliegenden Anleitung. Wenn ihr eine Karte zieht, die ein Minispiel in der App erfordert, könnt ihr hier das passende Spiel auswählen." FontSize="20"  Grid.Row="0" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="White" LineHeight="1.1"/>
            <Label Text="(Erhältlich auf Amazon!)" VerticalOptions="Center" HorizontalOptions="Fill" HorizontalTextAlignment="Center" FontSize="20" TextColor="{StaticResource Gold}" LineHeight="1.1" FontAttributes="Bold" TextDecorations="Underline">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenAmazonKnockKnockCardGameCommand}"/>
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>

        <ContentView x:Name="CardGameExtensionContentView" Grid.Row="2" >
            <ActivityIndicator IsRunning="True" Color="{StaticResource Gold}" VerticalOptions="Center" HorizontalOptions="Center"/>
        </ContentView>

    </Grid>
</ContentPage>